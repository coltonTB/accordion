.container.coupons
  background grey_bg
  line-height 20px
  
  .posted-by
    font-size 11pt
    color grey_med
    display block
    margin-top 18px
    strong
      color black
      font-weight bold
              
.quest-coupon
  .list-item
    .code
      margin-left 6px
  .details
    clickable()
    float right
    font-size: 12px
    color: color_main
    padding-right 3px
    &:after
      content: '+'
      background: color_main
      color: white
      width: 10px
      height: 10px
      border-radius: 24px
      margin-left: 5px
      padding-left: 1px
      padding-bottom: 1px
      line-height: 12px
      display: inline-block
    &:hover
      color color_stroke
      &:after
        background color_stroke
      