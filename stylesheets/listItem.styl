@import './vendor'
    
// list item
.list-item
  clickable()
  height 70px
  padding 12px
  background white
  border-top 1px solid grey_light
  border-bottom 1px solid grey_light
  &:hover  
    background color_main
    color white
    .icon
      border-color transparent
    
.list-item.product
  .image
    float left
    img 
      height 100%
      border 1px solid grey_light
      border-radius 3px
      padding 4px
      margin 0 12px
      box-sizing border-box
      background white
      box-shadow 0 0 5px #f0f0f0
  .title p
    margin 0
    margin-top 12px
    height 24px
    overflow hidden
  .price
    font-size 0.8em
    font-weight bolder
    .icon.check-icon
      display inline-block
      border none
      width 14px
      height 14px
      position relative
      top 2px

.list-item.sale, .list-item.coupon
  margin-top 10px
  border-radius 4px
  border 1px solid grey_circleline
  font-size 15px
  height auto
  &:hover
    .code
      color white
      border-color color_main
  .code
    color color_main
    margin-left 30px
  .description, .expiration
    margin-left 30px
    color grey_dark
    font-size 0.9em
    padding-top 2px
  .icon
    float left
    
.list-item.sale:hover
  .icon
    @extend .icon.share-icon:hover    
    
.list-item.coupon:hover
  .icon
    @extend .icon.down-arrow:hover    

