@import './vendor'

// 
// sales page
// 
.instant-cash-zone
  text-align center
  padding-top 50px
  background grey_bg
  .percentage
    width 105px
    margin-left auto
    margin-right auto
    color white
    background grey_dark
    height 105px
    border-radius 55px
    font-size 46px
    line-height 108px
  .ic-prompt
    font-weight bold
    font-size 1.1em
    margin 7px 0
  button.activate
    clickable()
    height 50px
    width 250px
    background color_main
    border 1px solid color_stroke
    border-radius 3px
    color white
    font-size 19px
    &:active
      border 1px solid white
    &:hover
      background-color honey_orange
  .expires
    font-size 12px
    margin 16px 0      
    


// 
// coupons page
// 
.container.coupons
  background grey_bg
  line-height 20px
  .posted-by
    font-size 11pt
    color grey_med
    display block
    margin-top 18px
    strong
      color black
      font-weight bold            
  .quest-coupon
    .list-item
      .code
        margin-left 6px
    .details
      clickable()
      float right
      font-size: 12px
      color: color_main
      padding-right 3px
      &:after
        content: '+'
        background: color_main
        color: white
        width: 10px
        height: 10px
        border-radius 24px
        margin-left: 5px
        padding-left: 1px
        padding-bottom: 1px
        line-height: 12px
        display: inline-block
      &:hover
        color color_stroke
        &:after
          background color_stroke
      

// 
// sales page
// 
.container.sales
  background grey_bg
  line-height 20px


// header for coupons and sales
.header
  color color_main
  font-size 18pt
  line-height 20px
  margin-bottom 20px
  .number
    float right
  
// view-all button for coupons and sales
.view-all
  clickable()
  text-align: center
  background: color_main
  border-radius 3px
  padding: 10px
  color white
  border 1px solid color_stroke
  margin 0 6px
  &:hover
    border-color color_main
    




// 
// instant cash unavailalbe page
// 
.container.icavailable    
  background grey_bg
  h1
    color color_main
    font-size 17px
    text-align center
    font-weight lighter
    margin 15px
  .list-item.ic-store
    height 25px
    border 1px solid grey_circleline
    border-radius 5px
    margin 10px 0
    text-align center
    color color_main
    .icon
      float right
    &:hover
      color white
      .icon
        @extend .icon.share-icon:hover