@import './functions'

.container.profile
  line-height 20px
  box-sizing border-box  
  .content
    height 320px    
    background grey_bg
    &.loggedout
      height 530px    
      padding-top 180px
      background color_main
    .username
      color color_main
      font-weight bold
    .bio
      font-size 0.8em
      margin-bottom 10px
    .list-item.profile
      height 20px
      margin 6px 0
      border-radius 4px
      border 1px solid grey_light
      .icon 
        float right
      .number
        color color_main
        width 40px
        text-align center
        display inline-block
        font-weight bold
      &:hover .icon
        @extend .icon.share-icon:hover
      
  .user-image
    clickable()
    width 100%
    text-align center
    background white
    padding-top 18px
    border-bottom 1px solid grey_light
    &:hover
      background color_main
      h2
        color white
    h2
      padding 20px 0
      font-weight 100
      color grey_med
    img 
      width 130px
      height 130px
      border 2px solid white
      border-radius 65px

  h1 
    color white
    font-size 20px
    text-align center
    margin-bottom 15px

  button
    clickable()
    width 100%
    height 30px
    border none
    &.submit
      background color_cover_light
      border 1px solid color_cover_dark
      color white
      &:hover
        background lighten(color_cover_light, 10%)
    &.switch
      background white
      border 1px solid color_stroke
      margin-top 160px
      color color_main
      &:hover
        background darken(white, 2%)

  .register-form button.switch
    margin-top 115px

  .form
    display none
    &.active
      display block      
    input 
      display: block
      width: 100%
      height 30px
      line-height 30px
      margin-bottom 10px
      padding-left 10px
    a
      text-align center
      width 100%
      display inline-block

  .profile-footer
    text-align center
    width 100%
    box-sizing border-box
    padding 25px
    border-top 1px solid grey_light
    background grey_bg
    a
      margin 0 6px