.container.profile
  line-height 20px
  box-sizing border-box    
  .content
    background color_main
    height 530px    
    padding-top 180px

  h1 
    color white
    font-size 20px
    text-align center
    margin-bottom 15px

  button
    clickable()
    width 100%
    height 30px
    border none
    &.submit
      background color_cover_light
      border 1px solid color_cover_dark
      color white
      &:hover
        background lighten(color_cover_light, 10%)
    &.switch
      background white
      border 1px solid color_stroke
      margin-top 160px
      color color_main
      &:hover
        background darken(white, 2%)
        
  .form
    input 
      display: block
      width: 100%
      height 30px
      line-height 30px
      margin-bottom 10px
      padding-left 10px
    a
      text-align center
      width 100%
      display inline-block
      

  .profile-footer
    text-align center
    width 100%
    box-sizing border-box
    padding 25px
    border-top 1px solid color_light
    background grey_bg
    a
      margin 0 6px